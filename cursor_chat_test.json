{
  "info": {
    "name": "Cursor Chat API Tests",
    "description": "Cursor 聊天API测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:9999",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "基础聊天",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"model\": \"claude-3.5-sonnet\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"你好，请介绍一下你自己\"\n    }\n  ],\n  \"stream\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/chat/completions",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "chat", "completions"]
        },
        "description": "发送基础聊天请求"
      }
    },
    {
      "name": "图片分析对话",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"model\": \"claude-3.5-sonnet\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": [\n        {\n          \"type\": \"text\",\n          \"text\": \"这张图片是什么？\"\n        },\n        {\n          \"type\": \"image_url\",\n          \"image_url\": {\n            \"url\": \"YOUR_BASE64_IMAGE_OR_URL\"\n          }\n        }\n      ]\n    }\n  ],\n  \"stream\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/chat/completions",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "chat", "completions"]
        },
        "description": "发送带图片的聊天请求"
      }
    },
    {
      "name": "连续对话",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"model\": \"claude-3.5-sonnet\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"你好\"\n    },\n    {\n      \"role\": \"assistant\",\n      \"content\": \"你好！很高兴见到你。有什么我可以帮你的吗？\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"请解释一下什么是人工智能\"\n    }\n  ],\n  \"stream\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/chat/completions",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "chat", "completions"]
        },
        "description": "发送多轮对话请求"
      }
    }
  ]
} 